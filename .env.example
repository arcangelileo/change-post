# =============================================================================
# ChangePost Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# All variables with defaults can be left blank for local development.

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------

# Enable debug mode (set to true for local development)
DEBUG=false

# Secret key for JWT token signing — REQUIRED in production
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=change-me-to-a-random-secret-key

# Database connection URL (SQLite for development, Postgres for production)
DATABASE_URL=sqlite+aiosqlite:///./changepost.db

# Public-facing base URL (used in emails and widget links)
BASE_URL=http://localhost:8000

# Host port mapping for Docker (default: 8000)
PORT=8000

# -----------------------------------------------------------------------------
# SMTP Email Settings (optional — leave SMTP_HOST empty to disable email)
# -----------------------------------------------------------------------------

# SMTP server hostname (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=

# SMTP server port (587 for STARTTLS, 465 for SSL)
SMTP_PORT=587

# SMTP authentication credentials
SMTP_USER=
SMTP_PASSWORD=

# Sender email address shown in notification emails
SMTP_FROM_EMAIL=noreply@changepost.app

# Use STARTTLS encryption (true for port 587, false for port 465)
SMTP_USE_TLS=true
